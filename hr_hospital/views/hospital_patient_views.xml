<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button type="object" string="Visits" class="btn-primary" name="action_open_visits"/>
                    <button type="object" string="Diagnoses" class="btn-success" name="action_open_diagnoses"/>
                    <button type="object" string="Analyses" class="btn-info" name="action_open_analyses"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_create_visit"
                                type="object"
                                icon="fa-address-book"
                                context="{'patient_id': id}">
                            <span>New visit</span>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="surname"/>
                            <field name="birthday_date"/>
                            <field name="gender"/>
                            <field name="age"/>
                        </group>
                        <group>
                            <field name="photo" class="oe_avatar" widget="image"/>
                        </group>
                    </group>
                    <group>
                        <group/>
                        <group>
                            <field name="passport"/>
                            <field name="address"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="contact_person_id"/>
                        </group>
                    </group>
                    <separator/>
                    <group>
                        <field name="doctor_id"/>
                    </group>
                    <notebook>
                        <page string="Doctor change history">
                            <field name="doctor_change_ids" mode="tree"/>
                        </page>
                        <page string="Disease history">
                            <field name="diagnosis_ids" mode="tree"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="surname"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="contact_person_id"/>
                <field name="doctor_id"/>
            </tree>
        </field>
    </record>

    <record id="action_hospital_patient" model="ir.actions.act_window">
            <field name="name">Patients</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.patient</field>
            <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_hospital_patients_patients"
              name="Patients"
              parent="menu_hospital_patients"
              action="action_hospital_patient"
              sequence="10"/>

</odoo>
