<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="surname"/>
                        <field name="photo"/>
                        <field name="gender"/>
                        <field name="specialty"/>
                        <field name="mentor_id"
                               domain="[('mentor_id', '=', False), ('id', '!=', id)]"/>
                        <field name="intern_ids"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="address"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="surname"/>
                <field name="specialty"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <record id="action_hospital_doctor" model="ir.actions.act_window">
            <field name="name">Doctors</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.doctor</field>
            <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_hospital_doctors"
              name="Doctors"
              parent="menu_hospital_operations"
              action="action_hospital_doctor"
              sequence="20"/>

</odoo>
