<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record model="report.paperformat" id="paperformat_disease_periodic_report">
        <field name="name">A4 Paper format for report</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">30</field>
        <field name="margin_right">5</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>

    <report id="disease_report_id"
            model="disease.periodic.report.wizard"
            string="Disease Periodic Report"
            report_type="qweb-pdf"
            name="hr_hospital.disease_periodic_report_template"
            file="hr_hospital.disease_periodic_report_template"
            paperformat="paperformat_disease_periodic_report"
            menu="False"/>

    <template id="disease_periodic_report_template">
        <t t-call="web.basic_layout">
            <div class="header" style="border-bottom: 2px solid black">
                <h3 class="text-center">Disease Periodic Report</h3>
                    <h4 class="text-center">
                        <strong>From</strong>:
                        <t t-esc="form['start_date']"/>
                        <strong>To</strong>:
                        <t t-esc="form['end_date']"/>
                    </h4>
            </div>
            <div class="article">
                <table class="table table-bordered" style="width: 100%">
                    <thead>
                        <th class="text-center" style="width: 70%">Disease</th>
                        <th class="text-center" style="width: 30%">Diagnoses</th>
                    </thead>
                    <tbody>
                        <t t-foreach="form['diseases']" t-as="disease">
                            <tr>
                                <td>
                                    <span t-esc="disease"/>
                                </td>
                                <td>
                                    <span t-esc="form['diseases'][disease]"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
            <div class="footer">
                <div class="row text-center" style="border-top: 1px solid black;">
                    <div class="col col-3 offset-9 text-right">
                        <ul class="list-inline mt-2">
                            <li class="list-inline-item">Page:</li>
                            <li class="list-inline-item">
                                <span class="page"/>
                            </li>
                            <li class="list-inline-item">/</li>
                            <li class="list-inline-item">
                                <span class="topage"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>
