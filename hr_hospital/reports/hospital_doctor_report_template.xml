<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="doctor_report_id" model="ir.actions.report">
        <field name="name">Doctor Report</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">hr_hospital.doctor_report_template</field>
        <field name="report_file">hr_hospital.doctor_report_template</field>
        <field name="paperformat_id" ref="hr_hospital.paperformat_custom_report"/>
    </record>

    <template id="doctor_report_template">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <div class="page">
                    <!-- Report Header -->
                    <div class="header">
                        <div class="row text-end">
                            <div class="col-12 mb4">
                                <img t-if="res_company.logo"
                                     t-att-src="image_data_uri(res_company.logo)"
                                     style="max-height: 45px;"
                                     alt="Logo"/>
                            </div>
                        </div>
                        <div class="row zero_min_height">
                            <div class="col-12">
                                <div style="border-bottom: 1px solid black;"/>
                            </div>
                        </div>
                        <div class="row text-end">
                            <div class="col-12" name="company_details">
                                <ul class="list-unstyled">
                                    <li t-esc="res_company.company_details"/>
                                    <li t-esc="doctor_name"/>
                                    <li t-esc="doctor_specialty"/>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- Report Body -->
                    <h1 class="text-center">Hello World</h1>
                    <!-- Report Footer -->
                    <div class="footer">
                        <div class="text-center" style="border-top: 1px solid black;">
                            <ul class="list-inline mb4">
                                <div t-field="res_company.report_footer"/>
                            </ul>
                            <t t-esc="datetime.datetime.now().strftime('%Y-%m-%d %H:%M')"/>
                            <div class="row text-center" style="border-top: 1px solid black;">
                                <div class="col col-3 offset-9 text-right">
                                    <ul class="list-inline mt-2">
                                        <li class="list-inline-item">Page:</li>
                                        <li class="list-inline-item">
                                            <span class="page"/>
                                        </li>
                                        <li class="list-inline-item">/</li>
                                        <li class="list-inline-item">
                                            <span class="topage"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Report Footer -->
                </div>
            </t>
        </t>
    </template>

</odoo>
